{
    "manifest_version": 2,

    "name": "Favicon Star",
    "description": "This extension customizes each favicon for easier readability",
    "version": "1.0",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage",
        "activeTab",
        "tabs",
        "<all_urls>"
    ],
    "background": {
        "scripts": ["events.js"],
        "persistence": false
    }
}
